@using System.Globalization
@using System.Text
@using ToileDeFond.Utilities
@model ToileDeFond.ContentManagement.Content

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create/Edit content of type @Model.ContentType.Name</legend>
        @Html.EditorForModel()
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Content</button> <button type="button" class="btn">Cancel</button>
        </div>
    </fieldset>
}